<Window x:Class="ZamianaUnitermu.AddCycle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZamianaUnitermu"
        mc:Ignorable="d"
        Title="Uniterm poziomej operacji cyklicznego zrównoleglania" Height="200" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Zmienna:" VerticalAlignment="Center" Margin="5,0,5,0"/>
        <TextBox x:Name="cuiVariable" Grid.Row="0" Grid.Column="1" Height="20" Margin="5,0,5,0"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Operacja:" VerticalAlignment="Center" Margin="5,0,5,0"/>
        <TextBox x:Name="cuiOperation" Grid.Row="1" Grid.Column="1" Height="20" Margin="5,0,5,0"/>
        <Button x:Name="cuiBtnAdd" Grid.Row="2" Grid.ColumnSpan="2" Content="Dodaj" Margin="5,5,5,5" Click="cuiBtinAdd_Click"/>
    </Grid>
</Window>
